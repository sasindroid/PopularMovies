<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlTrailerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="5dp">
    <!--android:background="@drawable/border_normal"-->

    <TextView
        android:id="@+id/tvInvisibleValueholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivTrailerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/movie_trailer"
        android:layout_centerHorizontal="true"
        />
    <!--android:scaleType="centerCrop"-->

    <TextView
        android:id="@+id/tvTrailerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivTrailerImage"
        android:layout_below="@+id/ivTrailerImage"
        android:layout_alignRight="@+id/ivTrailerImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:textSize="12sp"/>

</RelativeLayout>