<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlReviewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_normal"
                android:orientation="vertical"
                android:padding="10dp">

    <TextView
        android:id="@+id/tvReviewAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvReviewContent"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tvReviewContent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textStyle="italic"
        android:textColor="@color/blue_700"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tvReviewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReviewAuthor"
        />

</RelativeLayout>